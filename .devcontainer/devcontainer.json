{
  "name": "Sketchware-Pro",
  "image": "mcr.microsoft.com/devcontainers/java:17-gradle",
  "features": {
    "ghcr.io/devcontainers/features/android-sdk:1": {
      "version": "34"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.java",
        "vscjava.vscode-gradle",
        "vscjava.vscode-java-pack",
        "kotlin.kotlin-language"
      ]
    }
  },
  "postCreateCommand": "export ANDROID_SDK_ROOT=/root/android && chmod +x gradlew",
  "forwardPorts": [],
  "remoteUser": "root"
}
